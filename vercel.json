{
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": ".next",
  "env": {
    "ADMIN_SECRET": {
      "description": "Secret password for admin panel access",
      "required": true
    },
    "NEXT_PUBLIC_GA_ID": {
      "description": "Google Analytics ID (optional)",
      "required": false
    },
    "NEXT_PUBLIC_ADS_ENABLED": {
      "description": "Enable ad slots (true/false)",
      "required": false
    }
  }
}
