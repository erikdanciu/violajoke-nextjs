{
    "outputDirectory":  ".next",
    "buildCommand":  "npm run build",
    "env":  {
                "NEXT_PUBLIC_ADS_ENABLED":  {
                                                "description":  "Enable ad slots (true/false)",
                                                "required":  false
                                            },
                "NEXT_PUBLIC_GA_ID":  {
                                          "description":  "Google Analytics ID (optional)",
                                          "required":  false
                                      },
                "ADMIN_SECRET":  {
                                     "description":  "Secret password for admin panel access",
                                     "default":  "change-me-in-vercel",
                                     "required":  true
                                 }
            },
    "installCommand":  "npm ci"
}
